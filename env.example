# Database Configuration
POSTGRES_DB=feedback_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# Database URL (for direct connections)
DATABASE_URL=postgresql://user:password@localhost:5432/feedback_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Chroma (Vector Database) Configuration
EXTERNAL_CHROMA_URL=http://localhost:8000

# Optional: Use Hugging Face sentiment model instead of VADER
USE_HF_SENTIMENT=false

# Development Environment
NODE_ENV=development
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Security Configuration (for local development only)
SECURITY_SECRET_KEY=your-jwt-secret-key-change-in-production
SECURITY_SECRET_KEY_ROTATION=your-secondary-jwt-secret-for-rotation
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7

# User Credentials (for development/demo only - never use in production)
SECURITY_ADMIN_USERNAME=admin
SECURITY_ADMIN_PASSWORD=admin123
SECURITY_VIEWER_USERNAME=viewer
SECURITY_VIEWER_PASSWORD=viewer123
