FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY client/package*.json ./client/

# Install dependencies
RUN npm ci

# Copy client source
COPY client/ ./client/

# Build the client
RUN npm run build --workspace=client

# Install serve to serve the built app
RUN npm install -g serve

EXPOSE 3000

CMD ["serve", "-s", "client/dist", "-l", "3000"]
